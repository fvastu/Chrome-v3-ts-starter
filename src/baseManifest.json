{
    "name": "__MSG_appName__",
    "author": "Francesco Vasturzo",
    "version": "1.0.3",
    "manifest_version": 3,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "assets/icons/icon-16.png",
        "64": "assets/icons/icon-64.png",
        "128": "assets/icons/icon-128.png"
    },
    "default_locale": "en",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "password-enforcer/password-enforcer.js",
                "copy-paste-unlocker/copy-paste-unlocker.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "webNavigation",
        "alarms",
        "webRequest",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ads",
                "enabled": true,
                "path": "assets/dnr/ads-dnr.json"
            },
            {
                "id": "dataTracking",
                "enabled": true,
                "path": "assets/dnr/data-tracking-dnr.json"
            },
            {
                "id": "dataTrackingExtra",
                "enabled": true,
                "path": "assets/dnr/data-tracking-extra-dnr.json"
            },
            {
                "id": "cryptominers",
                "enabled": true,
                "path": "assets/dnr/cryptominers-dnr.json"
            }
        ]
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "settings/settings.html",
    "action": {
        "default_icon": {
            "16": "assets/icons/icon-16.png"
        },
        "default_title": "fvastu",
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "content/*",
                "popup/*",
                "settings/*",
                "stats/*",
                "background/*",
                "test/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}