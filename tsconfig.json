{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2019",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "resolveJsonModule": true,
        "paths": {
            "utils/*": ["./utils/*"],
            "popup/*": ["./popup/*"],
            "core/*": ["./core/*"],
            "background/*": ["./background/*"],
            "settings/*": ["./settings/*"],
            "content/*": ["./content/*"],
            "features/*": ["./features/*"],
            "shared/*": ["./shared/*"],
            "lib/*": ["./lib/*"],
            "assets/*": ["./assets/*"],
            "components/*": ["./components/*"],
            "types/*": ["./types/*"],
        },
        "typeRoots": ["node_modules/@types", "src/shared/types"]
    },
    "exclude": ["dist", "dev", "temp"]
}
